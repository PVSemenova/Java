<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="com.test.library.BookFormController" hgap="10" vgap="10">
   <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
   <TextField fx:id="txtTitle" GridPane.rowIndex="0" GridPane.columnIndex="1" />

   <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
   <ComboBox fx:id="cmbAuthor" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="true" />

   <Label text="Genre:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
   <TextField fx:id="txtGenre" GridPane.rowIndex="2" GridPane.columnIndex="1" />

   <Label text="Year:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
   <TextField fx:id="txtYear" GridPane.rowIndex="3" GridPane.columnIndex="1" />

   <Button text="Save" onAction="#onSave" GridPane.rowIndex="4" GridPane.columnIndex="0" />
   <Button text="Cancel" onAction="#onCancel" GridPane.rowIndex="4" GridPane.columnIndex="1" />
</GridPane>